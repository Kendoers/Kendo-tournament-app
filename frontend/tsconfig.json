{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "types": ["mocha"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "webpack.config.ts"]
}
