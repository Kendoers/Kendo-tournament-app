{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    /* Language and Environment */
    "target": "es2016",                           
    "module": "NodeNext",                         
    "rootDir": "src",                             
    "allowJs": true,                              
    "outDir": "build",                            
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                                     
    "noImplicitAny": true,                             
    "skipLibCheck": true,
    "lib": ["esnext"]
  }, 
}
